<head>
    <%- include ('../partials/javascript.ejs') %>
    <%- include ('../partials/stylesheets.ejs') %>

</head>

<body>
    <div id="wrapper">
			<%- include ('../partials/auth.ejs') %>
        <%- include ('../partials/sidebar.ejs') %>
        <div class="content">
            <div class="reported-table">
                <table id="example" class="compact hover display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Crime Type</th>
                            <th>Force</th>
                            <th>Where</th>
                            <th>Reported Date</th>
                            <th>Updated Last</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                           <tr>
                            <td><%- data.type %></td>
                            <td>Oxford</td>
                            <td><%- data.postcode %></td>
                            <td><%- data.date %></td>
                            <td><%- data.date %></td>
                            <td>
                                <a class="table-option" title="View on Map"><i class="fas fa-map-marked-alt"></i></a>
                                <a class="table-option" title="Delete"><i class="fas fa-trash"></i></a>
                                <a class="table-option" title="Add Note"><i class="fas fa-sticky-note"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include ('../partials/footer.ejs') %>
</body>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "columnDefs": [{
                "targets": 5,
                "orderable": false
            }]
        });
    });
</script>